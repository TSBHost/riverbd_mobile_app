<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingTop="?android:attr/actionBarSize" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="20dp">
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:text="Task Related Comments"
                    android:textColor="@color/colorAccent"
                    android:textSize="25sp"
                    android:lineSpacingExtra="10sp"
                    android:padding="0dp"
                    android:layout_marginBottom="10dp"/>




        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp">
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/usertaskcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorAccent"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:minLines="14"
                    android:textAlignment="center"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:hint="Write here your comments or press microphone for talking."
                    android:textColorHint="@color/black_overlay"/>

                <ImageButton android:id="@+id/ib_speak"
                    android:layout_gravity="right|top"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/voice"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <Button
                android:id="@+id/prevbtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight=".01"
                android:background="@null"
                android:paddingLeft="50dp"
                android:padding="5dp"
                android:drawableLeft="@drawable/prevbtn"
                />


            <Button
                android:id="@+id/nextbtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight=".01"
                android:background="@null"
                android:padding="5dp"
                android:drawableRight="@drawable/nextbtn" />

        </LinearLayout>
</LinearLayout>
</RelativeLayout>