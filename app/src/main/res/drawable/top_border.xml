<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorCCC" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAsh" />
            <corners android:radius="2dp" />
            <gradient
                android:startColor="@color/colorDeepAsh"
                android:endColor="@color/colorWhite" />
        </shape>
    </item>
</layer-list>