<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDeepAsh"/>
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <corners android:radius="5dp" />
            <gradient
                android:startColor="@color/colorOrange"
                android:centerColor="@color/colorDeepOrange"
                android:endColor="@color/colorDefault"
                android:angle="270" />
        </shape>
    </item>
</layer-list>